        <img src="{{ asset('/assets/img/umedasky2.jpg') }}" class="article-image-three-alt" alt="Umeda Sky">
        <img src="{{ asset('/assets/img/umedasky3.jpg') }}" class="article-image-three-alt" alt="Umeda Sky">
        <figcaption class="caption-text">
